<h1>Index View</h1>

<% @tasks.each do |task| %>
  <%= task.title %>
  <%= task.overview %>
  <%= I18n.t("models.enums.#{task.status}") %>
  <%= button_to I18n.t('views.button.show'), task_path(task.id), method: :get %>
  <%= button_to I18n.t('views.button.edit'), edit_task_path(task.id), method: :get %>
  <%= button_to I18n.t('views.button.delete'), task_path(task.id), method: :delete %>
<% end %>

<%= link_to I18n.t('views.link.create_task'), new_task_path %>