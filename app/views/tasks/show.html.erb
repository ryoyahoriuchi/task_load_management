<h1>show task</h1>

<p>title:<%= @task.title %></p>
<p>overview:<%= @task.overview %></p>
<p>status:<%= @task.status %></p>

<% @task.task_items.each_with_index do |task_item, i| %>
  <p><strong>要件<%= "#{i + 1}" %></strong></p>
  <p>task_item:<%= task_item.item %></p>
  <p>level:<%= task_item.level %></p>
<% end %>


<p><%= link_to "戻る", tasks_path %></p>