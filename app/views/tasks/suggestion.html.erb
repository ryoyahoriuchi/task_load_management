<h3>以下のスケジュールで進めますか？</h3>

<%= form_with(model: @task, local: true, url: suggestion_new_or_edit, method: suggestion_form_method ) do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :overview %>
  <%= f.hidden_field :status %>

  <p>タイトル：<%= @task.title %></p>
  <p>概要：<%= @task.overview %></p>

  <%= f.fields_for :task_items do |g| %>
    <% @task.task_items.each do |h| %>
      <p>要件<%= "#{g.index + 1}" %></p>
      <%= g.hidden_field :item %>
      <%= g.hidden_field :level %>
      <p>要件名：<%= h.item %></p>
      <p>負荷レベル：<%= h.level %></p>
    <% end %>
  <% end %>

  <%= f.submit "登録する"%>
  <%= f.submit "戻る", name: "back" %>
<% end %>