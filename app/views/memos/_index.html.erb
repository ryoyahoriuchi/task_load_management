<ul>
  <% memos.each do |memo| %>
    <% if memo.id.present? %>
      <li>
        <div class="memo-content" id="this_memo_<%= memo.id %>"></div>
        <p>
          <span><%= memo.content %></span>
          <span><%= button_to I18n.t('views.button.memo_edit'), edit_task_memo_path(@task, memo), method: :get, remote: true %></span>
          <span><%= button_to I18n.t('views.button.memo_delete'), task_memo_path(@task.id, memo.id), method: :delete, remote: true, data: { confirm: I18n.t('views.messages.confirm_whether_delete_memo')} %></span>
        </p>
      </li>
    <% end %>
  <% end %>
</ul>