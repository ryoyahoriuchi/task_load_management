<%= form_with(model: [task, progress]) do |f| %>
  <% if progress.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(progress.errors.count, "error")%><%= I18n.t('errors.template.header.other') %></h2>
      <ul>
        <% progress.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% items = @task.task_item_ids.count %>
    <%= f.label :item_number %>
    <%= f.select :item_number, [*1..items], class: "form-control" %>
    <%= f.label :percent %>
    <%= f.select :percent, [*0..100], class: "form-control" %>
    
  </div>

  <div class="actions">
    <%= f.submit I18n.t('helpers.submit.create'), class: "btn btn-primary" %>
  </div>
<% end %>