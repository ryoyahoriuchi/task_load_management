<div class="text-center">
  <div class="col-md-6 offset-md-3 mt-3 content">
    <h2 class="pt-4"><%= t('.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: I18n.t('form.email'), autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
