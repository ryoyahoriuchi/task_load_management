<div class="text-center">
  <div class="col-md-6 offset-md-3 mt-3 content">
    <h2 class="pt-4"><%= t('.change_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, t('.new_password') %><br />
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: I18n.t('form.password'), class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: I18n.t('form.confirmation_password'), class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
