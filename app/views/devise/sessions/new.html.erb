<div class="text-center">
  <div class="col-md-6 offset-md-3 mt-3 content">
    <h2 class="pt-5"><%= t('.sign_in') %></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form_group pt-4 pb-3">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: I18n.t('form.email'), class: "form-control" %>
      </div>
      <div class="field form_group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: I18n.t('form.password'), class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <div class="text-center">
      <p><%= button_to I18n.t('views.button.guest'), users_guest_sign_in_path, method: :post, class: "btn btn-primary" %></p>
      <%= button_to I18n.t('views.button.guest_admin'), users_guest_admin_sign_in_path, method: :post, class: "btn btn-primary" %>
    </div>
  </div>
  <%= link_to I18n.t('views.link.top_page'), root_path %>
</div>